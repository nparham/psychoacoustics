#include <stdio.h>
#include <stdlib.h>

int main(){
  int ROW_LENGTH = 8;
  int COLUMN_LENGTH = 8;
  int Data[8][8];
  int sensorIsOn = 0;
  while (sensorIsOn){
    getDataFromSensor();
    int average = getAverage(Data,64);
    
    int i,j;
    for(i = ROW_LENGTH-1; i>=0; i--){
      for(j = COLUMN_LENGTH-1; j>=0; j--){
  //subtract the average from all of the array blocks in order to subtract the background.
	Data[i][j]-=average;
      }
    }
  }
}
void getDataFromSensor(){}

int getAverage(int *array, int area){
  int min = 0;
  int max = 0;
  int sum = 0;
  int average = 0;
  int i, j;
  for(int i = 0; i<area/8; i++){
    for(int j = 0; i<area/8; j++){
      sum+=array[i][j];
      if(array[i][j]>=max)
	max = array[i][j];
      if(array[i][j]<=min)
	min = array[i][j];
    }
  }
  average = (sum -max -min)/62;
  return average;
}




